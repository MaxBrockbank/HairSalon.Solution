@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Are you sure you want to delete this client of @Html.DisplayFor(model => model.Stylist.StylistFirstName) @Html.DisplayFor(model => model.Stylist.StylistLastName)?</h2>
<hr />
<h5>@Html.DisplayNameFor(model => model.ClientFirstName): @Html.DisplayFor(model => model.ClientFirstName)</h5>
<h5>@Html.DisplayNameFor(model => model.ClientLastName): @Html.DisplayFor(model => model.ClientLastName)</h5>


@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}
<hr />
<p>@Html.ActionLink("Edit client", "Edit", new { id = Model.ClientId})</p>
<p>@Html.ActionLink("Back to clients", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>