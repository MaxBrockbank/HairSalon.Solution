@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>
<hr />
@if (@Model.Count == 0)
{
    <h3>No clients have been added yet!</h3>
}

<ul>
@foreach (Client client in Model)
{
    <li>@Html.ActionLink($"{client.ClientFirstName + " " + client.ClientLastName}", "Details", new {id=client.ClientId}) | @client.Stylist.StylistFirstName @client.Stylist.StylistLastName</li>
}
</ul>

<hr />
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>