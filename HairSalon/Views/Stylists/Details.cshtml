@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.StylistFirstName): @Html.DisplayFor(model => model.StylistFirstName)</h3>
<h3>@Html.DisplayNameFor(model => model.StylistLastName): @Html.DisplayFor(model => model.StylistLastName)</h3>

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>No clients have been added yet!</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>@client.ClientFirstName @client.ClientLastName</li>
}
</ul>


<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to all stylists", "Index")</p>