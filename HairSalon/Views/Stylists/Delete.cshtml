@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Are you sure you want to delete this?</h2>
<hr />
<h5>@Html.DisplayNameFor(model => model.StylistFirstName): @Html.DisplayFor(model => model.StylistFirstName)</h5>
<h5>@Html.DisplayNameFor(model => model.StylistLastName): @Html.DisplayFor(model => model.StylistLastName)</h5>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}
<hr />
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>